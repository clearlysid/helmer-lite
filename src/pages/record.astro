---
import Base from "../components/base.astro";
import RecordButton from "../components/cropper/RecordButton";
import DragHandle from "../components/cropper/DragHandle.astro";
---

<Base>
	<div class="flex flex-row items-center h-full align-middle">
		<DragHandle />
		<RecordButton client:only="react" />
		<DragHandle />
	</div>
</Base>

<style is:global>
	button::before {
		content: "";
		position: absolute;
		top: 0;
		width: 100%;
		height: 100%;
		background: linear-gradient(
			120deg,
			transparent,
			rgba(255, 255, 255, 0.2),
			transparent
		);
		left: -100%;
		transition: all 0.3s ease-in-out;
	}

	button:hover::before {
		left: 100%;
	}

	@-webkit-keyframes shine {
		0% {
			left: -100%;
			transition-property: left;
		}
		11.5044247788%,
		100% {
			left: 100%;
			transition-property: left;
		}
	}

	@keyframes shine {
		0% {
			left: -100%;
			transition-property: left;
		}
		11.5044247788%,
		100% {
			left: 100%;
			transition-property: left;
		}
	}
</style>
